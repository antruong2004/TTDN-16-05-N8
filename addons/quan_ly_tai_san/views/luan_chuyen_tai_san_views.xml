<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_luan_chuyen_tai_san_tree" model="ir.ui.view">
        <field name="name">luan.chuyen.tai.san.tree</field>
        <field name="model">luan_chuyen_tai_san</field>
        <field name="arch" type="xml">
            <tree string="Luân chuyển tài sản" decoration-success="trang_thai=='hoan_thanh'"
                  decoration-warning="trang_thai=='cho_duyet'" decoration-danger="trang_thai=='tu_choi'"
                  decoration-muted="trang_thai=='nhap'">
                <field name="ma_phieu"/>
                <field name="tai_san_id"/>
                <field name="phong_ban_cu_id"/>
                <field name="phong_ban_moi_id"/>
                <field name="trang_thai"/>
            </tree>
        </field>
    </record>
    <record id="view_luan_chuyen_tai_san_form" model="ir.ui.view">
        <field name="name">luan.chuyen.tai.san.form</field>
        <field name="model">luan_chuyen_tai_san</field>
        <field name="arch" type="xml">
            <form string="Luân chuyển tài sản">
                <header>
                    <button name="action_gui_duyet" type="object" string="Gửi duyệt"
                            class="btn-primary" attrs="{'invisible': [('trang_thai', '!=', 'nhap')]}"/>
                    <button name="action_duyet" type="object" string="Duyệt"
                            class="btn-success" attrs="{'invisible': [('trang_thai', '!=', 'cho_duyet')]}"/>
                    <button name="action_tu_choi" type="object" string="Từ chối"
                            class="btn-danger" attrs="{'invisible': [('trang_thai', '!=', 'cho_duyet')]}" confirm="Bạn có chắc chắn muốn từ chối?"/>
                    <button name="action_hoan_thanh" type="object" string="Hoàn thành luân chuyển"
                            class="btn-warning" attrs="{'invisible': [('trang_thai', '!=', 'da_duyet')]}"/>
                    <button name="action_nhap_lai" type="object" string="Về nháp"
                            class="btn-secondary" attrs="{'invisible': [('trang_thai', 'not in', ['tu_choi'])]}"/>
                    <field name="trang_thai" widget="statusbar" statusbar_visible="nhap,cho_duyet,da_duyet,hoan_thanh"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ma_phieu" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Thông tin chung">
                            <field name="ma_phieu"/>
                            <field name="tai_san_id"/>
                            <field name="ngay_luan_chuyen"/>
                            <field name="trang_thai"/>
                        </group>
                    </group>
                    <group>
                        <group string="Từ">
                            <field name="phong_ban_cu_id"/>
                            <field name="nhan_vien_cu_id"/>
                            <field name="vi_tri_cu"/>
                        </group>
                        <group string="Đến">
                            <field name="phong_ban_moi_id"/>
                            <field name="nhan_vien_moi_id"/>
                            <field name="vi_tri_moi"/>
                        </group>
                    </group>
                    <group>
                        <field name="ly_do"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_luan_chuyen_tai_san" model="ir.actions.act_window">
        <field name="name">Luân chuyển tài sản</field>
        <field name="res_model">luan_chuyen_tai_san</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
