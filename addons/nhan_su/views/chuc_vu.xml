<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================= FORM VIEW ================= -->
        <record id="view_chuc_vu_form" model="ir.ui.view">
            <field name="name">chuc_vu.form</field>
            <field name="model">chuc_vu</field>
            <field name="arch" type="xml">
                <form string="Chức vụ">
                    <sheet>

                        <group string="Thông tin chung" col="4">
                            <field name="ma_dinh_danh"/>
                            <field name="ten_chuc_vu"/>
                            <field name="phong_ban_id"/>
                            <field name="luong_co_ban"/>
                        </group>

                        <group string="Mô tả" col="4">
                            <field name="mo_ta" colspan="4" nolabel="1"/>
                        </group>

                        <field name="nhan_vien_ids" colspan="4">
                            <tree>
                                <field name="ma_dinh_danh"/>
                                <field name="email"/>
                                <field name="so_dien_thoai"/>
                            </tree>
                        </field>

                        <group string="Trạng thái" col="4">
                            <field name="active"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- ================= TREE VIEW ================= -->
        <record id="view_chuc_vu_tree" model="ir.ui.view">
            <field name="name">chuc_vu.tree</field>
            <field name="model">chuc_vu</field>
            <field name="arch" type="xml">
                <tree string="Danh sách chức vụ">
                    <field name="ma_dinh_danh"/>
                    <field name="ten_chuc_vu"/>
                    <field name="phong_ban_id"/>
                    <field name="luong_co_ban"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- ================= SEARCH VIEW ================= -->
        <record id="view_chuc_vu_search" model="ir.ui.view">
            <field name="name">chuc_vu.search</field>
            <field name="model">chuc_vu</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_dinh_danh"/>
                    <field name="ten_chuc_vu"/>
                    <field name="phong_ban_id"/>

                    <filter string="Hoạt động" name="active" domain="[('active','=',True)]"/>
                    <filter string="Không hoạt động" name="inactive" domain="[('active','=',False)]"/>
                </search>
            </field>
        </record>

        <!-- ================= ACTION ================= -->
        <record id="action_chuc_vu" model="ir.actions.act_window">
            <field name="name">Chức vụ</field>
            <field name="res_model">chuc_vu</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_chuc_vu_search"/>
        </record>

    </data>
</odoo>
